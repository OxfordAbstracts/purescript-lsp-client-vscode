{
	"name": "purs-lsp-client",
	"description": "Purescript language server client",
	"license": "MIT",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:purescript"
	],
	"contributes": {
		"languages": [
			{
				"id": "purescript",
				"aliases": [
					"Purescript",
					"purescript"
				],
				"extensions": [
					".purs"
				]
			}
		],
		"commands": [
			{
				"command": "purescript.build",
				"title": "PureScript: Build"
			}
		]
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./src --ext .ts,.tsx",
		"test": "sh ./scripts/e2e.sh"
	},
	"dependencies": {
		"debounce": "^2.1.1",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@types/vscode": "^1.75.1",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
